{
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system@^4.6.2",
            "splashscreen@^4.6.2",
            "templatelayout@^4.6.2",
            "template-seasons@^4.6.2",
            "theme-autumn@^4.6.2",
            "toolset@^4.6.2",
            "map-init@^4.6.2",
            "omnisearch@^4.6.2",
            "banner@^4.6.2",
            "basemapswitcher",
            "locator-store",
            "dn_welcome",
            "dn_what3words"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "dn_what3words": {
            "Config": {
                "apiKey": "K428TP86"
            }
        },
        "dn_welcome": {
            "WelcomeWidgetFactory": {
                "title": "Willkommen in der what3words-Demo",
                "infoText": "Diese Demo zeigt die Nutzung der w3w Lokalisierungsmöglichkeiten in map.apps. Mit dem Werkzeug wird bei Klick in die Karte die entsprechende Drei-Wort-Adresse angezeigt. Zudem kann bei Eingabe einer Drei-Wort-Adresse in das Suchfeld der entsprechende Ort (ein 3x3m Quadrat) angezeigt werden.",
                "buttonText": "Hinweis schließen",
                "checkboxText": "Nicht erneut anzeigen",
                "imgUrl": "resource('${app}:images/w3w_Symbol.png')",
                "imgHeight": "250px",
                "accept": false,
                "expirationTime": 7,
                "cookieName": "dn_welcome_hide"
            }
        },
        "locator-store": {
            "Config": {
                "title": "Addresses and places",
                "description": "Find addresses or places.",
                "url": "@@locator.service.url@@"
            }
        },
        "omnisearch": {
            "DrawHandler": {
                "_symbolTable": {
                    "point": {
                        "url": "resource('${app}:images/mapMarker.png')",
                        "width": 37,
                        "height": 36,
                        "xoffset": 0,
                        "yoffset": -15,
                        "type": "esriPMS"
                    }
                }
            }
        },
        "basemapswitcher": {
            "Config": {
                "nextBasemap": "streets"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets-vector",
                        "title": "Strassen",
                        "selected": false
                    },
                    {
                        "id": "satellite",
                        "basemap": "satellite",
                        "title": "Satellitenbilder",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": [
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "popup",
                        "tools": [
                            "popupToggleTool"
                        ],
                        "container": "map",
                        "windowType": "fixed",
                        "cssClass": "muted, notitle",
                        "position": {
                            "l": 22,
                            "t": 120
                        }
                    }
                ]
            }
        }
    }
}
